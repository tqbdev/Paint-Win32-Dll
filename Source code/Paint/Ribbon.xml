  <Application.Views>
    <Ribbon>
      <Ribbon.HelpButton>
        <HelpButton CommandName="cmdBtnHelp" />
      </Ribbon.HelpButton>
      <Ribbon.ApplicationMenu>
        <ApplicationMenu>
          <MenuGroup Class="MajorItems">
            <Button CommandName="cmdBtnNew"/>
            <Button CommandName="cmdBtnOpen"/>
            <Button CommandName="cmdBtnSave"/>
          </MenuGroup>
          <MenuGroup Class="MajorItems">
            <Button CommandName="cmdBtnExit"/>
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>
      <Ribbon.Tabs>
        <Tab CommandName="cmdTabHome">
          <Group CommandName="cmdShapesGroup" SizeDefinition="ThreeButtons">
            <ToggleButton CommandName="cmdBtnLine"/>
            <ToggleButton CommandName="cmdBtnRectangle"/>
            <ToggleButton CommandName="cmdBtnEllipse"/>
          </Group>
          <Group CommandName="cmdColorsGroup" SizeDefinition="TwoButtons">
            <DropDownColorPicker ColorTemplate="ThemeColors"  ChipSize="Medium" IsAutomaticColorButtonVisible="true" IsNoColorButtonVisible="false" Columns="10" StandardColorGridRows="1" CommandName="cmdColorPicker"/>
            <DropDownColorPicker ColorTemplate="ThemeColors"  ChipSize="Medium" IsAutomaticColorButtonVisible="false" IsNoColorButtonVisible="true" Columns="10" StandardColorGridRows="1" CommandName="cmdColorFillPicker"/>
          </Group>
          <Group CommandName="cmdStylesGroup" SizeDefinition="TwoButtons">
            <DropDownGallery CommandName="cmdBtnStyles" Type="Commands" ItemHeight="32" ItemWidth="128" HasLargeItems="true">
              <DropDownGallery.MenuLayout>
                <VerticalMenuLayout Gripper="None" />
              </DropDownGallery.MenuLayout>
              <DropDownGallery.MenuGroups>
              <MenuGroup Class="MajorItems">
                <ToggleButton CommandName="cmdSOLID"/>
                <ToggleButton CommandName="cmdDASH"/>
                <ToggleButton CommandName="cmdDOT"/>
                <ToggleButton CommandName="cmdDASHDOT"/>
                <ToggleButton CommandName="cmdDASHDOTDOT"/>
              </MenuGroup>
              </DropDownGallery.MenuGroups>
            </DropDownGallery>
            <DropDownGallery CommandName="cmdBtnWidth" Type="Commands" ItemHeight="32" ItemWidth="128" HasLargeItems="true">
              <DropDownGallery.MenuLayout>
                <VerticalMenuLayout Gripper="None" />
              </DropDownGallery.MenuLayout>
              <DropDownGallery.MenuGroups>
                <MenuGroup Class="MajorItems">
                  <ToggleButton CommandName="cmdSize1"/>
                  <ToggleButton CommandName="cmdSize2"/>
                  <ToggleButton CommandName="cmdSize3"/>
                  <ToggleButton CommandName="cmdSize5"/>
                </MenuGroup>
              </DropDownGallery.MenuGroups>
            </DropDownGallery>
          </Group>
        </Tab>
      </Ribbon.Tabs>
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="cmdQAT" CustomizeCommandName="cmdCustomizeQAT">
          <QuickAccessToolbar.ApplicationDefaults>
            <Button CommandName="cmdBtnNew" ApplicationDefaults.IsChecked="false"/>
            <Button CommandName="cmdBtnOpen" ApplicationDefaults.IsChecked="false"/>
            <Button CommandName="cmdBtnSave"/>
            <Button CommandName="cmdBtnUndo"/>
            <Button CommandName="cmdBtnRedo"/>
          </QuickAccessToolbar.ApplicationDefaults>
        </QuickAccessToolbar>
      </Ribbon.QuickAccessToolbar>
    </Ribbon>
